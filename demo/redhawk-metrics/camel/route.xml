<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <camelContext xmlns="http://camel.apache.org/schema/blueprint">
        <route id="REDHAWKMetricsRoute">
                <from uri="timer:metricTimer?period=1s&amp;fixedRate=true" /><!-- http://camel.apache.org/timer.html -->
                <setHeader headerName="CamelHttpMethod">
        			<constant>GET</constant>
   			 	</setHeader>
    			<to uri="http4://localhost:8181/cxf/redhawk/127.0.0.1:2809/domains/REDHAWK_DEV/metrics"/><!-- http://camel.apache.org/http4.html -->
                <log message="Timer hit ${body}" />
        </route>
    </camelContext>
</blueprint>
