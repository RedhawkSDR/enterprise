<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>demo-distribution</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>${runtime.dir}</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.parent.basedir}/camel-event-channel/src/main/resources</directory>
			<outputDirectory>camel-event-channel</outputDirectory>
			<fileMode>0775</fileMode>
			<directoryMode>0775</directoryMode>
		</fileSet>		
	</fileSets>
	<files>
		<file>
			<source>${project.parent.basedir}/redhawk-webapp/target/redhawkwebdemo.war</source>
			<outputDirectory>webapp</outputDirectory>
		</file>
		<file>
			<source>${project.parent.basedir}/redhawk-metrics/target/redhawkmetrics.war</source>
			<outputDirectory>metrics</outputDirectory>
		</file>
		<file>
			<source>${project.parent.basedir}/redhawk-metrics/camel/route.xml</source>
			<outputDirectory>metrics</outputDirectory>
		</file>		
	</files>	
</assembly>
