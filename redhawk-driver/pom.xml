											<directory>src/test/java/redhawk/driver</directory>
											<targetPath>examples/snippets</targetPath>
											<includes>
												<include>RedhawkDriverTestIT.java</include>
											</includes>
										</resource>
										<resource>
											<directory>src/test/java/redhawk/driver/application/impl</directory>
											<targetPath>examples/snippets</targetPath>											
											<includes>
												<include>RedhawkApplicationImplTestIT.java</include>
											</includes>
										</resource>
										<resource>
											<directory>src/test/java/redhawk/driver/domain/impl</directory>
											<targetPath>examples/snippets</targetPath>											
											<includes>
												<include>RedhawkDomainManagerImplTestIT.java</include>
											</includes>
										</resource>
										<resource>
											<directory>src/test/java/redhawk/driver/component/impl</directory>
											<targetPath>examples/snippets</targetPath>											
											<includes>
												<include>RedhawkComponentImplTestIT.java</include>
											</includes>
										</resource>
										<resource>
											<directory>src/test/java/redhawk/driver/eventchannel/impl</directory>
											<targetPath>examples/snippets</targetPath>
											<includes>
												<include>RedhawkEventChannelManagerTestIT.java</include>
											</includes>
										</resource>
										<resource>
											<directory>src/test/java/redhawk/driver/device/impl</directory>
											<targetPath>examples/snippets</targetPath>
											<includes>
												<include>RedhawkDeviceImplTestIT.java</include>
											</includes>
										</resource>										
										<resource>
											<directory>src/main/asciidoc</directory>
										</resource>																				
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<!--
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-site-plugin</artifactId>
						<configuration>
							<asciidoc>
								<baseDir>${project.basedir}</baseDir>
