<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>redhawk</groupId>
		<artifactId>redhawk-java-tools</artifactId>
		<version>2.0.4-SNAPSHOT</version>
	</parent>
	<artifactId>redhawk-driver</artifactId>
	<packaging>bundle</packaging>
	<name>REDHAWK :: Driver</name>
	<description>Java library for integrating with REDHAWK</description>

	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<scm>
		<connection>scm:git:git@git.vsi-corp.com:redbus/redhawk-driver.git</connection>
		<developerConnection>scm:git:git@git.vsi-corp.com:redbus/redhawk-driver.git</developerConnection>
		<url>http://git.vsi-corp.com/redbus/redhawk-driver</url>
		<tag>HEAD</tag>
	</scm>

	<build>
		<resources>
			<resource>
				<filtering>false</filtering>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>**/*.xsd</include>
					<include>**/*.xml</include>
					<include>jacorb.properties</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<!-- Having issues building with 1.8 due to JAVADOC errors adding this 
				for now -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.4</version>
				<configuration>
					<failOnError>false</failOnError>
				</configuration>
				<executions>
					<execution>
						<id>attach-artifact</id>
						<goals>
							<goal>javadoc</goal>
						</goals>
						<phase>process-resources</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<version>1.0-alpha-2</version>
				<executions>
					<execution>
						<id>set-additional-system-properties</id>
						<goals>
							<goal>set-system-properties</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<properties>
						<property>
							<name>javax.xml.accessExternalSchema</name>
							<value>all</value>
						</property>
					</properties>
					<outputFile />
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Import-Package>
							com.sun.corba.se.impl.encoding;resolution:=optional,
							org.ietf.jgss;resolution:=optional,
							javax.rmi.*;resolution:=optional,
							!redhawk.*,
							!BULKIO.*,
							!CF.*,
							!ExtendedCF.*,
							!ExtendedEvent,
							!FRONTEND,
							!PortTypes,
							!StandardEvent,
							!org.hamcrest.*,
							!org.ossie.*,
							!omnijni.*,
							!org.omg.CosEventChannelAdmin.*,
							!org.omg.CosEventComm.*,
							!org.apache.log4j.*,
							!org.apache.commons.lang,
							!javax.swing.*
							*
						</Import-Package>
						<DynamicImport-Package>*</DynamicImport-Package>
						<Export-Package>
							CF.*;version=${redhawk.version},
							ExtendedEvent.*;version=${redhawk.version},
							org.ossie.*;version=${redhawk.version},
							omnijni.*;version=${redhawk.version},
							org.omg.CosEventChannelAdmin.*;version=${redhawk.version},
							org.omg.CosEventComm.*;version=${redhawk.version},
							ExtendedCF.*;version=${redhawk.version},
							FRONTEND.*;version=${redhawk.version},
							BULKIO.*;version=${redhawk.version},
							StandardEvent.*;version=${redhawk.version},
							PortTypes.*;version=${redhawk.version},
							redhawk.*;version=${Bundle-Version},
						</Export-Package>
						<Embed-Dependency>cfinterfaces;inline=true,bulkiointerfaces;inline=true;ossie;inline=true;frontendinterfaces;inline=true</Embed-Dependency>
						<_nodefaultversion>true</_nodefaultversion>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>jaxb-generation</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>jaxb2-maven-plugin</artifactId>
						<version>1.6</version>
						<configuration>
							<schemaDirectory>src/main/resources/schemas</schemaDirectory>
							<bindingDirectory>src/main/resources/bindings</bindingDirectory>
							<extension>true</extension>
						</configuration>
						<executions>
							<execution>
								<id>xjc-dcd</id>
								<goals>
									<goal>xjc</goal>
								</goals>
								<configuration>
									<schemaFiles>dcd.xsd</schemaFiles>
									<packageName>redhawk.driver.xml.model.sca.dcd</packageName>
									<!-- Only the first execution can/must have this set to true -->
									<clearOutputDir>true</clearOutputDir>
								</configuration>
							</execution>
							<execution>
								<id>xjc-dmd</id>
								<goals>
									<goal>xjc</goal>
								</goals>
								<configuration>
									<schemaFiles>dmd.xsd</schemaFiles>
									<packageName>redhawk.driver.xml.model.sca.dmd</packageName>
									<!-- Only the first execution can/must have this set to true -->
									<clearOutputDir>false</clearOutputDir>
								</configuration>
							</execution>
							<execution>
								<id>xjc-dpd</id>
								<goals>
									<goal>xjc</goal>
								</goals>
								<configuration>
									<schemaFiles>dpd.xsd</schemaFiles>
									<packageName>redhawk.driver.xml.model.sca.dpd</packageName>
									<!-- Only the first execution can/must have this set to true -->
									<clearOutputDir>false</clearOutputDir>
								</configuration>
							</execution>
							<execution>
								<id>xjc-prf</id>
								<goals>
									<goal>xjc</goal>
								</goals>
								<configuration>
									<schemaFiles>prf.xsd</schemaFiles>
									<packageName>redhawk.driver.xml.model.sca.prf</packageName>
									<!-- Only the first execution can/must have this set to true -->
									<clearOutputDir>false</clearOutputDir>
								</configuration>
							</execution>
							<execution>
								<id>xjc-profile</id>
								<goals>
									<goal>xjc</goal>
								</goals>
								<configuration>
									<schemaFiles>profile.xsd</schemaFiles>
									<packageName>redhawk.driver.xml.model.sca.profile</packageName>
									<!-- Only the first execution can/must have this set to true -->
									<clearOutputDir>false</clearOutputDir>
								</configuration>
							</execution>
							<execution>
								<id>xjc-sad</id>
								<goals>
									<goal>xjc</goal>
								</goals>
								<configuration>
									<schemaFiles>sad.xsd</schemaFiles>
									<packageName>redhawk.driver.xml.model.sca.sad</packageName>
									<!-- Only the first execution can/must have this set to true -->
									<clearOutputDir>false</clearOutputDir>
								</configuration>
							</execution>
							<execution>
								<id>xjc-scd</id>
								<goals>
									<goal>xjc</goal>
								</goals>
								<configuration>
									<schemaFiles>scd.xsd</schemaFiles>
									<packageName>redhawk.driver.xml.model.sca.scd</packageName>
									<!-- Only the first execution can/must have this set to true -->
									<clearOutputDir>false</clearOutputDir>
								</configuration>
							</execution>
							<execution>
								<id>xjc-spd</id>
								<goals>
									<goal>xjc</goal>
								</goals>
								<configuration>
									<schemaFiles>spd.xsd</schemaFiles>
									<packageName>redhawk.driver.xml.model.sca.spd</packageName>
									<!-- Only the first execution can/must have this set to true -->
									<clearOutputDir>false</clearOutputDir>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>docs</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
