<features name="redhawk-enterprise-integration-2.0.0-SNAPSHOT" xmlns="http://karaf.apache.org/xmlns/features/v1.3.0">
	<repository>mvn:org.apache.karaf.features/standard/4.0.8/xml/features</repository>
	<repository>mvn:org.apache.cxf.karaf/apache-cxf/3.1.10/xml/features</repository>
	<repository>mvn:org.apache.camel.karaf/apache-camel/2.17.5/xml/features</repository>
	<feature name="redhawk-enterprise-integration-driver" version="2.0.0-SNAPSHOT">
		<bundle>mvn:redhawk/redhawk-driver/2.0.0-SNAPSHOT</bundle>
	</feature>
	
	<feature name="redhawk-enterprise-integration-connector" version="2.0.0-SNAPSHOT">
		<!-- This may or may not be necessary but if you'd like to enter a config from the webconsole this is a must -->	
		<feature version="4.0.8">webconsole</feature>
		<feature>redhawk-enterprise-integration-driver</feature>
		<bundle>mvn:redhawk/redhawk-connector/2.0.0-SNAPSHOT</bundle>
	</feature>
	
	<feature name="redhawk-enterprise-integration-rest" version="2.0.0-SNAPSHOT">
		<feature version="2.0.0-SNAPSHOT">redhawk-enterprise-integration-connector</feature>
		<feature version="3.1.10">cxf-core</feature>
		<feature version="3.1.10">cxf-rs-security-cors</feature>
		<feature version="3.1.10">cxf-rs-description-swagger2</feature>
		<!-- CXF 3.1.10 has a bug where you can't install the CXF feature -->
		<bundle>mvn:org.yaml/snakeyaml/1.17</bundle>
		<!-- JACKSON -->
		<bundle>mvn:com.fasterxml.jackson.dataformat/jackson-dataformat-xml/2.8.3</bundle>
		<bundle>mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-json-provider/2.8.3</bundle>
		<bundle>mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-base/2.8.3</bundle>
		<bundle>mvn:com.fasterxml.jackson.core/jackson-core/2.8.3</bundle>
		<bundle>mvn:com.fasterxml.jackson.core/jackson-databind/2.8.3</bundle>
		<bundle>mvn:com.fasterxml.jackson.core/jackson-annotations/2.8.3</bundle>
		<bundle>mvn:com.fasterxml.jackson.module/jackson-module-jaxb-annotations/2.8.3</bundle>								
		<bundle>mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-xml-provider/2.8.3</bundle>										
		<!-- End of Jackson Deps -->
		<bundle>mvn:commons-lang/commons-lang/2.6</bundle>
		<bundle>mvn:redhawk/redhawk-rest/2.0.0-SNAPSHOT</bundle>		
	</feature>
	
	<feature name="redhawk-enterprise-integration-websocket" version="2.0.0-SNAPSHOT">
		<feature version="2.0.0-SNAPSHOT">redhawk-enterprise-integration-connector</feature>
		<bundle>wrap:mvn:com.google.code.gson/gson/2.8.0</bundle>
		<!--
		<bundle>mvn:commons-collections/commons-collections/3.2.2</bundle>
		<bundle>mvn:commons-beanutils/commons-beanutils/1.9.2</bundle>
		-->
		<!-- End of commons-osgi feature -->
		<bundle>mvn:redhawk/redhawk-websocket/2.0.0-SNAPSHOT</bundle>
	</feature>
	
	<feature name="redhawk-enterprise-integration-camel" version="2.0.0-SNAPSHOT">
		<feature version="2.0.0-SNAPSHOT">redhawk-enterprise-integration-connector</feature>
		<feature version="2.17.5">camel-core</feature>
		<feature version="2.17.5">camel-blueprint</feature>
		<bundle>mvn:commons-lang/commons-lang/2.6</bundle>
		<bundle>mvn:redhawk/camel-redhawk/2.0.0-SNAPSHOT</bundle>	
	</feature>
	
	<feature name="redhawk-enterprise-integration-all" version="2.0.0-SNAPSHOT">
		<feature>redhawk-enterprise-integration-driver</feature>
		<feature>redhawk-enterprise-integration-connector</feature>
		<feature>redhawk-enterprise-integration-rest</feature>
		<feature>redhawk-enterprise-integration-websocket</feature>
		<feature>redhawk-enterprise-integration-camel</feature>				
	</feature>
</features>
