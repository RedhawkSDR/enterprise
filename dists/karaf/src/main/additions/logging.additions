log4j.appender.redhawk.jaxrs.file=${karaf.data}/redhawk-jaxrs/redhawk-jaxrs.log
log4j.appender.redhawk.jaxrs.append=true
log4j.appender.redhawk.jaxrs.maxFileSize=1MB
