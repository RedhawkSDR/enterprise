		<profile>
			<id>jacorb-tests</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
        				<artifactId>maven-antrun-plugin</artifactId>
        				<version>1.8</version>
						<executions>
							<execution>
								<id>jacorb</id>
								<phase>generate-resources</phase>
								<configuration>
									<target>
                						<property name="runtime_classpath" refid="maven.runtime.classpath"/>									
										<echo message="Maven classpath: ${runtime_classpath}"/> 
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
